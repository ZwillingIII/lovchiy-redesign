.favorites
  .container
    .favorites-wrap
      h2.page-title Избранное
      .favorites-items
        each product in catalogProducts
          .product-card
            .product-card__top
              .product-card__labels
                if product.new
                  .product-card__new Новинка
                if product.discount
                  .product-card__discount= '-' + product.discount + '%'
              if product.favorite
                .product-card__favorite.active
                  svg(
                    width="18",
                    height="16",
                    viewBox="0 0 18 16",
                    fill="none",
                    xmlns="http://www.w3.org/2000/svg"
                  )
                    path(
                      d="M4.04544 0.833269L4.04651 0.832942C5.84615 0.283932 6.91633 1.04865 8.28554 2.02706C8.39657 2.1064 8.50957 2.18714 8.62508 2.2687C8.84969 2.4273 9.14979 2.42742 9.37452 2.26899C9.48888 2.18837 9.60077 2.10857 9.71073 2.03014C11.0817 1.05234 12.152 0.289014 13.9472 0.833268C16.8519 1.71392 17.9571 4.69123 17.0351 7.39934C16.5046 8.83544 15.6353 10.1403 14.4908 11.2133C12.8189 12.7419 10.9782 14.0953 9.00058 15.2497C7.02295 14.0953 5.1823 12.7419 3.51037 11.2133C2.3659 10.1403 1.49658 8.83543 0.966052 7.39932C0.0434705 4.68956 1.14221 1.71347 4.04544 0.833269Z",
                      fill="white",
                      stroke="#0F0F0F",
                      stroke-width="1.3",
                      stroke-linecap="round",
                      stroke-linejoin="round"
                    )
              else
                .product-card__favorite
                  svg(
                    width="18",
                    height="16",
                    viewBox="0 0 18 16",
                    fill="none",
                    xmlns="http://www.w3.org/2000/svg"
                  )
                    path(
                      d="M4.04544 0.833269L4.04651 0.832942C5.84615 0.283932 6.91633 1.04865 8.28554 2.02706C8.39657 2.1064 8.50957 2.18714 8.62508 2.2687C8.84969 2.4273 9.14979 2.42742 9.37452 2.26899C9.48888 2.18837 9.60077 2.10857 9.71073 2.03014C11.0817 1.05234 12.152 0.289014 13.9472 0.833268C16.8519 1.71392 17.9571 4.69123 17.0351 7.39934C16.5046 8.83544 15.6353 10.1403 14.4908 11.2133C12.8189 12.7419 10.9782 14.0953 9.00058 15.2497C7.02295 14.0953 5.1823 12.7419 3.51037 11.2133C2.3659 10.1403 1.49658 8.83543 0.966052 7.39932C0.0434705 4.68956 1.14221 1.71347 4.04544 0.833269Z",
