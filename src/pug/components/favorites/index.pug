            .product-card__img
              img(src=product.preview)
            .product-card__stock
              if product.inStock
                img(src="assets/images/other/in-stock.svg")
                span Товар в наличии
              else
                img(src="assets/images/other/not-stock.svg")
                span Нет в наличии
            .product-card__name= product.name
            .product-card__bottom
              .product-card__price
                if product.discount
                  .product-card__price-old= product.price + ' ₽'
                  .product-card__price-new= product.discountPrice + ' ₽'
                else
                  .product-card__price-standard= product.price + ' ₽'
              if product.points
                .product-card__points
                  .product-card__points-logo Б
                  .product-card__points-val= product.points
