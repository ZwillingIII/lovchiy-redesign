.catalog-products
  .catalog-products__wrap
    .catalog-products__tags
      .catalog-products__tags-items
        each item in sections
          a.catalog-products__tags-item( href=item.link )= item.name
    .catalog-products__settings
      .catalog-products__settings-content
        .catalog-products__settings-sort
          select.select
            option( value="0" ) по названию
            option( value="1" ) по популярности
            option( value="2" ) по цене
        .catalog-products__settings-view
          .catalog-products__settings-radio
            input( type="radio" name="catalog-view" id="paw" checked )
            label( for="paw" )
              svg( width="20" height="20" viewBox="0 0 20 20" fill="none" xmlns="http://www.w3.org/2000/svg" )
                rect(x="4" y="4" width="5" height="5" rx="1" fill="#D1D2D4")
                rect(x="11" y="4" width="5" height="5" rx="1" fill="#D1D2D4")
                rect(x="4" y="11" width="5" height="5" rx="1" fill="#D1D2D4")
                rect(x="11" y="11" width="5" height="5" rx="1" fill="#D1D2D4")
          .catalog-products__settings-radio
            input( type="radio" name="catalog-view" id="string" )
            label( for="string" )
              svg(width="20" height="20" viewBox="0 0 20 20" fill="none" xmlns="http://www.w3.org/2000/svg")
                rect(x="2" y="5" width="4" height="3" rx="1" fill="#D1D2D4")
                rect(x="8" y="5" width="10" height="3" rx="1" fill="#D1D2D4")
                rect(x="2" y="12" width="4" height="3" rx="1" fill="#D1D2D4")
                rect(x="8" y="12" width="10" height="3" rx="1" fill="#D1D2D4")
