.news
  .container
    .stocks-wrap
      .section-top
        .section-top__title Новости и статьи
        a.section-top__link Все новости
      .news-wrap
        .news-items
          .swiper-wrapper
            each item in news
              .news-item.swiper-slide
                .news-item__img
                  img(src=item.img)
                .news-item__content
                  .news-item__date= item.date
                  .news-item__name= item.name
                .news-item__description= item.previewDesc
        .news-navs
          .news-navs__next.swiper-button-next
            img(src="assets/images/other/slide-next-black.svg")
          .news-navs__prev.swiper-button-prev
            img(src="assets/images/other/slide-prev-black.svg")